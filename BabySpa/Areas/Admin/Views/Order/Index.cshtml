@using BabySpa.Areas.Admin.Models
@using System.Data;
@using BabySpa;
@model OrderSearch
@{
    ViewBag.Title = "Order List";
}
@Html.Partial("_LeftMenu")
@Styles.Render("~/Content/Vendors")

<div class="col-md-10">
    @using (Html.BeginForm("Index", "Order"))
    {
        <div class="row">
            <div class="panel panel-default bootstrap-admin-no-table-panel">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">
                        Order Search
                    </div>
                </div>
                <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                    <div class="form-horizontal">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="@Model.TourID">Tour ID</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.TourID, new { @class = "form-control" })
                                </div>
                                <label class="col-lg-2 control-label" for="@Model.OrderID">Order ID</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.OrderID, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="@Model.SOrderDate">Order Date</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.SOrderDate, new { @class = "form-control datetimepicker" })
                                </div>
                                <label class="col-lg-2 control-label" for="@Model.EOrderDate"></label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.EOrderDate, new { @class = "form-control datetimepicker" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="@Model.SCompletedDate">Complete Date</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.SCompletedDate, new { @class = "form-control datetimepicker" })
                                </div>
                                <label class="col-lg-2 control-label" for="@Model.ECompletedDate"></label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.ECompletedDate, new { @class = "form-control datetimepicker" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="@Model.Status">Status</label>
                                <div class="col-lg-10">
                                    <label class="uniform">
                                        <input class="uniform_on" type="checkbox" id="Status1" value="1" name="Status">
                                        New
                                    </label>
                                    <label class="uniform">
                                        <input class="uniform_on" type="checkbox" id="Status2" value="2" name="Status">
                                        Processing
                                    </label>
                                    <label class="uniform">
                                        <input class="uniform_on" type="checkbox" id="Status3" value="3" name="Status">
                                        Canceled
                                    </label>
                                    <label class="uniform">
                                        <input class="uniform_on" type="checkbox" id="Status4" value="4" name="Status">
                                        Confirmed
                                    </label>
                                    <label class="uniform">
                                        <input class="uniform_on" type="checkbox" id="Statu5s" value="5" name="Status">
                                        Completed
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="@Model.STourDate">Tour Start Date</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.STourDate, new { @class = "form-control datepicker" })
                                </div>
                                <label class="col-lg-2 control-label" for="@Model.ETourDate"></label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.ETourDate, new { @class = "form-control datepicker" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="@Model.TourType">Tour Type</label>
                                <div class="col-lg-4">
                                    <label class="uniform">
                                        <input class="uniform_on" type="checkbox" id="TourType1" value="1" name="TourType">
                                        Photo
                                    </label>
                                    <label class="uniform">
                                        <input class="uniform_on" type="checkbox" id="TourType2" value="2" name="TourType">
                                        Fishing
                                    </label>
                                    <label class="uniform">
                                        <input class="uniform_on" type="checkbox" id="TourType3" value="3" name="TourType">
                                        Custom
                                    </label>
                                </div>
                                <label class="col-lg-2 control-label" for="@Model.TourSeason">Tour Season</label>
                                <div class="col-lg-4">
                                    @Html.DropDownListFor(m => m.TourSeason, new SelectList(
           new List<Object>{
                                               new { value = 0 , text = ""},
                                               new { value = 2017 , text = "2017"},
                                               new { value = 2018 , text = "2018"},
                                               new { value = 2019 , text = "2019"},
                                               new { value = 2020 , text = "2020"},
                                               new { value = 2021 , text = "2021"},
                                               new { value = 2022, text = "2022"},
                                               new { value = 2023 , text = "2023"}
             },
           "value",
           "text"), new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="@Model.AgentID">Agent</label>
                                <div class="col-lg-4">
                                    @Html.DropDownListFor(
            m => m.AgentID,
            BabySpa.App.getSelectDicListByType("agent", true)
            , new { @class = "form-control" }
            )
                                </div>
                                <label class="col-lg-2 control-label" for="@Model.CustID">Cust ID</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.CustID, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="@Model.CustName">Cust Name</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.CustName, new { @class = "form-control" })
                                </div>
                                <label class="col-lg-2 control-label" for="@Model.Email">Cust Email</label>
                                <div class="col-lg-4">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12 ">
                                    <button type="submit" class="btn btn-primary pull-right">SEARCH</button>
                                </div>
                            </div>
                            @{ if (Func.ToStr(ViewBag.Result) != "")
                                {
                                    <div class="form-group has-error">
                                        <label class="control-label" for="inputError">@ViewBag.Result</label>
                                    </div>
                                }
                            }
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" id="list">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Order List @(Model.List != null ? ":  " + Model.List.Rows.Count + " records found." : "")</div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Order Date</th>
                                <th>Status</th>
                                <th>TotalAmount</th>
                                <th>Cur</th>
                                <th>Tour ID</th>
                                <th>Tour name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.List != null)
                            {
                                foreach (DataRow row in Model.List.Rows)
                                {
                                    <tr>
                                        <td>
                                            <a class="" href="@Url.Action("Edit", "Order", new { id = row["orderid"] })">@row["orderid"]</a>
                                        </td>
                                        <td>@row["orderdate"] </td>
                                        <td>
                                            @((BabySpa.Models.eOrderStatus)Func.ToInt(row["status"]))
                                        </td>
                                        <td class="text-left">@row["TotalAmount"]</td>
                                        <td>@row["Cur"]</td>
                                        <td>@row["TourID"]</td>
                                        <td>@row["TourName"]</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
                                }
</div>


@section scripts
{
    @Scripts.Render("~/bundles/vendors")

    <script type="text/javascript">
        $(function () {
            $('.datepicker').datetimepicker({ format: 'L' });
            $('.datetimepicker').datetimepicker();
        });
    </script>
}