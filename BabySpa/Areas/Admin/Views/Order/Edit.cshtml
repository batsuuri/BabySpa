@using BabySpa.Areas.Admin.Models
@using System.Data;
@using BabySpa;
@using BabySpa.Models;
@model Order
@{
    ViewBag.Title = "Order Detail";
}
@Styles.Render("~/Content/Vendors")
@Html.Partial("_LeftMenu")
<div class="col-md-10">

    <div class="row">
        <div class="panel panel-default bootstrap-admin-no-table-panel">
            @*<div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Order Search</div>
                </div>*@
            <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                <div id="tabOrder">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#orderTab" data-toggle="tab">Order</a>
                        </li>
                        <li>
                            <a href="#customerTab" data-toggle="tab">Customers</a>
                        </li>
                        <li>
                            <a href="#paymentTab" data-toggle="tab">Payment</a>
                        </li>
                        <li>
                            <a href="#emailTab" data-toggle="tab">Emails</a>
                        </li>
                    </ul>

                    <div class="tab-content clearfix">
                        <div class="tab-pane active" id="orderTab">
                            <h3>  </h3>
                            @using (Html.BeginForm("Edit", null, FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.HiddenFor(m => m.OrderID)
                                @Html.HiddenFor(m => m.Status)
                                @Html.HiddenFor(m => m.TourID)
                                @Html.HiddenFor(m => m.TourName)
                                @Html.HiddenFor(m => m.AgentID)
                                @Html.HiddenFor(m => m.CompletedDate)
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                <fieldset>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Tour Name</label>
                                        <div class="col-lg-10">
                                            <a class="control-label pull-left" href="@Url.Action("Index", "Tour", new { id = Model.TourID })">@Model.TourName</a>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Order Date</label>
                                        <div class="col-lg-4">
                                            <p class="mt5">@Model.OrderDate</p>
                                        </div>
                                        <label class="col-lg-2 control-label">Completed Date</label>
                                        <div class="col-lg-4">
                                            <p class="mt5">@Model.CompletedDate</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Total Amount</label>
                                        <div class="col-lg-4">
                                            <div class="col-lg-8 pl0">
                                                @Html.EditorFor(model => model.TotalAmount, new { htmlAttributes = new { @class = "form-control text-right", maxlength = 25, min = "0", step = "1" } })
                                            </div>
                                            <div class="col-lg-4 pl0 pr0">
                                                                        @Html.DropDownListFor(
                                                 m => m.Cur,
                                                 BabySpa.App.getCurList(),
                                                  new { @class = "form-control" }
                         )
                                            </div>
                                        </div>
                                        <label class="col-lg-2 control-label">Amount MNT</label>
                                        <div class="col-lg-4">
                                            @Html.EditorFor(m => m.TotalAmountMNT, new { htmlAttributes = new { @class = "form-control text-right", maxlength = 25 , min = "0", step = "1" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label" for="ParticipantCount"># of Traveller(s)</label>
                                        <div class="col-lg-4">
                                            @Html.EditorFor(m => m.ParticipantCount, new { htmlAttributes = new { @class = "form-control text-right", maxlength = 2, type = "number", min = "1", step = "1" } })
                                        </div>
                                        <label class="col-lg-2 control-label">Total Payment</label>
                                        <div class="col-lg-4">
                                            <p class="text-right mt5">@Model.TotalPayment @Model.Cur</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Status</label>
                                        <div class="col-lg-4">
                                            <p class="mt5">@BabySpa.App.getBasicDataName("orderstatus", Func.ToStr(Model.Status))</p>
                                        </div>
                                        <label class="col-lg-2 control-label">Agent Name</label>
                                        <div class="col-lg-4">
                                            <p class="mt5">@BabySpa.App.getDicTextValue("agent", Func.ToStr(Model.AgentID))</p>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.AdminNote, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(model => model.AdminNote, new { @class = "form-control", rows = 3, maxlength = 1000 })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-2">
                                            @Html.ActionLink("Back to Search", "Index")
                                        </div>
                                        <div class="pull-right">
                                            <div class="col-lg-12 btn-group">
                                                <button type="submit" name="submit" class="btn btn-primary" value="save" id="save">Save</button>
                                                <button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-primary" id="delete">Delete</button>
                                                <button data-toggle="dropdown" name="submit" value="changestatus" class="btn btn-primary dropdown-toggle" id="changestatus">Change Status <span class="caret"></span></button>
                                                <ul class="dropdown-menu">
                                                    <li><a href="../ChangeStatus/@Model.OrderID~1">New</a></li>
                                                    <li><a href="../ChangeStatus/@Model.OrderID~2">Processing</a></li>
                                                    <li><a href="../ChangeStatus/@Model.OrderID~4">Confirmed</a></li>
                                                    <li><a href="../ChangeStatus/@Model.OrderID~5">Completed</a></li>
                                                    <li class="divider"></li>
                                                    <li><a href="../ChangeStatus/@Model.OrderID~3">Cancel</a></li>
                                                </ul>
                                            </div></div>
                                            <div class='clearfix'></div>
                                            <div id="myModal" class="modal fade" role="dialog">
                                                <div class="modal-dialog">
                                                    <!-- Modal content-->
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                            <h4 class="modal-title">Delete Order</h4>
                                                        </div>
                                                        <div class="modal-body">
                                                            <b>You realy wanna delete this order?</b>
                                                            <br /><i>Delete operation is cannot undo!!!</i>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-primary" name="submit" value="delete">Delete anyway</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    @if (Func.ToStr(ViewBag.Result) != "")
                                    {
                                        <div class="form-group alert alert-info mt10 mv0">
                                            <a class="close" data-dismiss="alert" href="#">&times;</a>
                                            <label class="col-lg-10 control-label" for="inputError">@ViewBag.Result</label>
                                        </div>
                                    }
                                </fieldset>
                            }


                        </div>
                        <div class="tab-pane" id="customerTab">
                            <h3></h3>
                            @{ CustSearch search = new CustSearch();
                                search.OrderID = Model.OrderID;}
                            @Html.Action("Search", "Customer", search)
                        </div>
                        <div class="tab-pane" id="paymentTab">
                            <h3>We applied clearfix to the tab-content to rid of the gap between the tab and the content</h3>
                        </div>
                        <div class="tab-pane" id="emailTab">
                            <h3>We use css to change the background color of the content to be equal to the tab</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/vendors")
@Scripts.Render("~/bundles/jqueryval")


    <script type="text/javascript">
        function RecallJS() {
            $('.datepicker').datetimepicker({ format: 'L' });
            $('.datetimepicker').datetimepicker();
        }
    </script>
}