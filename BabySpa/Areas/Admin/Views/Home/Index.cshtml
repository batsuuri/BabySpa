                        </ul>*@
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Copy Tour</div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    @using(Html.BeginForm("Copy","Tour", FormMethod.Post, null))
                    {
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Tour ID</label>
                            <div class="col-lg-4">
                                <input class="form-control" id="TourID" name="TourID" type="text" value="">
                            </div>
                            <label class="control-label col-md-2"> Tour Season</label>
                            <div class="col-md-4">
                                <select class="form-control" data-val="true" data-val-number="The field TourSeason must be a number." data-val-required="The TourSeason field is required." id="TourSeason" name="TourSeason">
                                    <option value="2017">2017</option>
                                    <option value="2018">2018</option>
                                    <option value="2019">2019</option>
                                    <option value="2020">2020</option>
                                    <option value="2021">2021</option>
                                    <option value="2022">2022</option>
                                    <option value="2023">2023</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-6 pull-l6">
                                <input type="submit" value="Copy Tour Info" />
                                @*@Html.ActionLink("Copy Tour Info", "Copy", "Tour", null, new { @class = "btn btn-primary" })*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <div class="warning" id="iMessage">
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row bootstrap-admin-no-edges-padding">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
