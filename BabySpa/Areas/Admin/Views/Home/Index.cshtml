@{
    ViewBag.Title = "About";
}
@Html.Partial("_LeftMenu")


<!-- content -->
<div class="col-md-10">
    <div class="row">
        <div class="bootstrap-admin-content-title">
            <h3>
                Welcome to Mystic Mongolia Admin Panel
            </h3>
        </div>
    </div>
    <div class="row bootstrap-admin-no-edges-padding form-horizontal">
        <div class="col-md-6 ">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Operations</div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    <div class="form-group">
                        <div class="col-lg-6">
                            @Ajax.ActionLink("Refresh Tour Data", "RefreshTour", "Home", null,new AjaxOptions { UpdateTargetId = "Message", HttpMethod = "Post" }, new { @class = "btn btn-primary" })
                        </div>
                        <div class="col-lg-6">
                            @Ajax.ActionLink("Refresh Bacis Data", "RefreshBasic", "Home", null, new AjaxOptions { UpdateTargetId = "Message", HttpMethod = "Post" }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <div class="warning" id="Message">
                            </div>
                        </div>
                    </div>
                    @*<ul>
                            <li>An admin theme built with <a href="http://getbootstrap.com" target="_blank">Bootstrap 3.x.</a></li>
                            <li>Free for personal and commercial use</li>
