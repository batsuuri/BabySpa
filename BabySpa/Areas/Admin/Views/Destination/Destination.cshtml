@using BabySpa.Areas.Admin.Models;
@using BabySpa;
@model DestinationViewModel
@Styles.Render("~/Content/Vendors")
@{
    ViewBag.Title = "Tour Destinations";
}
@Html.Partial("_LeftMenu")
<div class="col-md-10">
    <div class="row">
        @{ string actionname = Model.DisplayMode == "WriteOnly" ? "Insert" : "Update";}
        @using (Html.BeginForm(actionname, "Destination", null, FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal" id="custForm">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="text-muted bootstrap-admin-box-title">Destination Detail</div>
                    </div>
                    <div class="bootstrap-admin-panel-content">
                        @Html.HiddenFor(model => model.DestinationID)
                        @Html.HiddenFor(model => model.DisplayMode)
                        @if (Model.CurrentDestination != null)
                        {
                            <input data-val-gl="true" id="Glob_TableName" name="Glob_TableName" type="hidden" value="DATA_Destination">
                            <input data-val-gl="true" id="Glob_KeyField" name="Glob_KeyField" type="hidden" value="@(Model.CurrentDestination.DestinationID)">
                            @Html.HiddenFor(model => model.CurrentDestination.DestinationID)
                            for (int i = 0; i < Model.CurrentDestination.PhotoUrl.Count(); i++)
                            {
                                @Html.HiddenFor(model => model.CurrentDestination.PhotoUrl[i])
                            }
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label col-md-2">Destination Name</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CurrentDestination.DestinationName, new { htmlAttributes = new { @class = "form-control", maxlength = 150 } })
                                    @Html.ValidationMessageFor(model => model.CurrentDestination.DestinationName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Description</label>
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.CurrentDestination.DestinationDesc, new { @class = "form-control", rows = 5, maxlength = 4000 })
                                    @Html.ValidationMessageFor(model => model.CurrentDestination.DestinationDesc, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Geo Location</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CurrentDestination.GeoLocation, new { htmlAttributes = new { @class = "form-control", maxlength = 50 } })
                                    @Html.ValidationMessageFor(model => model.CurrentDestination.GeoLocation, "", new { @class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Province</label>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.CurrentDestination.Province, new { htmlAttributes = new { @class = "form-control", maxlength = 50 } })
                                    @Html.ValidationMessageFor(model => model.CurrentDestination.Province, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label col-md-2">Soum</label>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.CurrentDestination.Soum, new { htmlAttributes = new { @class = "form-control", maxlength = 50 } })
                                    @Html.ValidationMessageFor(model => model.CurrentDestination.Soum, "", new { @class = "text-danger"})
                                </div>
                            </div>
                            for (int i = 0; i < Model.CurrentDestination.PhotoUrl.Count(); i++)
                            {
                                <div class="form-group">
                                    <label class="control-label col-md-2">Select photo#[@(i)]</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                                <span class="btn btn-default btn-file">
                                                    Browse… <input type="file" id="imgInp[@(i)] " name="file" accept="image/*">
                                                </span>
                                            </span>
                                            <input type="text" class="form-control" readonly>
                                        </div>
                                        @if (Func.ToStr(Model.CurrentDestination.PhotoUrl[i]) != "")
                                        {
                                            <img id='img-upload' class="imagePreview" src="@(Url.Content("~/") + "Content/tour/" + Model.CurrentDestination.PhotoUrl[i])" />
                                        }
                                        else
                                        {
                                            <img id='img-upload' class="imagePreview" />
                                        }
                                    </div>
                                    <label class="control-label col-md-2">Select photo#[@(i)] (small)</label>
                                    <div class="col-md-4">
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                                <span class="btn btn-default btn-file">
                                                    Browse… <input type="file" id="imgInp[@(i)]s" name="fileSmall" accept="image/*">
                                                </span>
                                            </span>
                                            <input type="text" class="form-control" readonly>
                                        </div>
                                        @if (Func.ToStr(Model.CurrentDestination.PhotoUrl[i]) != "")
                                        {
                                            <img id='img-upload' class="imagePreview" src="@(Url.Content("~/") + "Content/tour/" + Helper.GetPreviewImageUrl(Model.CurrentDestination.PhotoUrl[i],false))" />
                                        }
                                        else
                                        {
                                            <img id='img-upload' class="imagePreview" />
                                        }
                                    </div>
                                </div>
                            }
                        }
                        <div class="form-group">
                            <div class="pull-right">
                                <div class="col-lg-12">
                                    @if (Model.DisplayMode != "WriteOnly")
                                    {
                                        @Html.ActionLink("New Destination", "New", "Destination", null, new { @class = "btn btn-default" })
                                    }

                                    @if (Model.DisplayMode != "ReadOnly" && Model.CurrentDestination != null)
                                    {
                                        <button type="submit" name="submit" class="btn btn-primary" value="save" id="save">Save</button>
                                    }
                                    @if (Model.DisplayMode == "EditOnly" && Model.CurrentDestination != null)
                                    {
                                        <button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-primary" id="delete">Delete</button>
                                        <div id="myModal" class="modal fade" role="dialog">
                                            <div class="modal-dialog">
                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Delete Destination</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <b>You realy wanna delete this destination?</b>
                                                        <br /><i>Delete operation is cannot undo!!!</i>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                        @Html.ActionLink("Delete anyway", "Delete", "Destination", new { id = Model.CurrentDestination.DestinationID }, new { @class = "btn btn-default" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        @if (Func.ToStr(ViewBag.Result) != "")
                        {
                            <div class="form-group alert alert-info mt10">
                                <a class="close" data-dismiss="alert" href="#">&times;</a>
                                <label class="col-lg-10 control-label" for="inputError" id="ResultMessage">@ViewBag.Result</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="panel panel-default" id="DestinationContent">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">
                        Destination List @(Model.List != null ? ":  " + Model.List.Count + " records found." : "")
                    </div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    @if (Model.List != null)
                {
                        <table class="table">
                            <tr>
                                <th>
                                    Destination Name
                                </th>
                                <th>
                                    Province
                                </th>
                                <th>
                                    Soum
                                </th>
                            </tr>

                            @foreach (var item in Model.List)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink(item.DestinationName, "Edit", "Destination", new { id = item.DestinationID }, null)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Province)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Soum)
                                    </td>
                                </tr>
                            }

                        </table>
                    }

                </div>
            </div>
        }
    </div>
    </div>
<div id="TranslatorContent">
    @Html.Action("Index", "Translator")
</div>
@section scripts
{
    @Scripts.Render("~/bundles/vendors")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(function () {

            $(document).on('change', '.btn-file :file', function () {
                var input = $(this),
                    label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
                input.trigger('fileselect', [label]);
                readURL(this);
            });

            $('.btn-file :file').on('fileselect', function (event, label) {

                var input = $(this).parents('.input-group').find(':text'),
                    log = label;

                if (input.length) {
                    input.val(log);
                } else {
                    if (log) alert(log);
                }

            });
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $(input).closest('div').next('img').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            $(document).on("click", "input.form-control[type='text'][maxlength], textarea.form-control", function (e) {
                if (event.altKey) {
                    col = this.name;
                    form = $(this.form);
                    table = form.find("[data-val-gl=true]")[0].value;
                    key = form.find("[data-val-gl=true]")[1].value;
                    modal = $("#TranslatorModal");
                    $("#TranslatorContent").load('@Url.Action("Index", "Translator")' + '?t=' + table + '&c=' + col + '&k=' + key);
                    //$(modal).modal('show').draggable({ handle: ".modal-header" });
                }
            });

            $(document).on("click", "[data-dismiss=modal]", function (e) {
                $("#TranslatorModal").removeClass("in").css("display", "none").attr("aria-hidden", "true");
                $("#TranslatorModal").modal('hide');

            });

        });
    </script>
}